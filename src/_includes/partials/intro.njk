<div class="container intro-block">
  <div class="row">
    <div class="column">
      <img src="/assets/images/logo.svg" alt="Logo" class="logo"/>
    </div>
    <div class="column intro-heading">
      <h1 class="heading">{{ intro_block.title }}</h1>
    </div>
  </div>
  <nav class="row desktop-navigation">
    <div class="column intro-switcher">
      <nav class="language-switcher ">
        {% for lg in site.languages %}
        {% set activeClass = "language-switcher__item_active" if lg.code == locale else "" %}

        <a href="{{ lg.link }}" class="language-switcher__item {{activeClass}}">{{ lg.locale }}</a>
        {% endfor %}
      </nav>
    </div>
    <div class="column intro-links">
      <div class="">
        <a href="#project" class="intro-link">{{ intro_block.links[0] }}</a>
        <a href="#team" class="intro-link">{{ intro_block.links[1] }}</a>
        <a href="#contacts" class="intro-link">{{ intro_block.links[2] }}</a>
      </div>
      <div class="">
        <a href="#" class="intro-link">Instagram</a>
        <a href="#" class="intro-link">Telegram</a>
        <a href="#" class="intro-link">Email<svg class="intro-link__icon"><use href="#mail" /></svg></a>
      </div>
    </div>
  </nav>
  <div class="welcome"></div>
  <div class="row">
    <a href="#" class="column link">{{ intro_block.buttons[0] }}</a>
    <a href="#" class="column link link_variant">{{ intro_block.buttons[1] }}</a>
  </div>
</div>