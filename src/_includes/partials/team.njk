<section class="container team-block" id="team">
  <div class="section-header">
    <div class="section-header__text">
      <h3 class="heading">{{ team_block.heading }}</h3>
      <p class="lead">{{ team_block.lead }}</p>
    </div>
    <img src="/assets/images/team.svg" alt="Illustration about team" class="section-illustration"/>
  </div>
  <div class="row">
    <div class="column">
      <p class="text">{{ team_block.text[0] }}</p>
      <p class="text">{{ team_block.text[1] }}</p>
    </div>
    <div class="column">
      <p class="text">{{ team_block.text[2] }}</p>
      <p class="text">{{ team_block.text[3] }}</p>
    </div>
  </div>
</section>